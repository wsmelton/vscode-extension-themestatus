{
    "name": "theme-status",
    "displayName": "Theme Status",
    "description": "Shows the current or active theme in the status bar",
    "version": "0.0.1",
    "publisher": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/wsmelton/vscode-extension-themestatus"
    },
    "bugs": {
        "url": "https://github.com/wsmelton/vscode-extension-themestatus/issues"
    },
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
